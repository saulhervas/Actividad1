<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFF90"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/twparrafoIzquierdo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:text="Hello World!"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/iwImagen"
        app:layout_constraintEnd_toStartOf="@+id/twparrafoDerecho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/twparrafoDerecho"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:text="Hello World!"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/iwImagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/twparrafoIzquierdo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iwImagen"
        android:layout_width="242dp"
        android:layout_height="221dp"
        android:src="@mipmap/ic_bonsai"
        app:layout_constraintBottom_toTopOf="@+id/btnCambiar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twparrafoIzquierdo" />

    <Button
        android:id="@+id/btnCambiar"
        android:layout_width="235dp"
        android:layout_height="47dp"
        android:text="Cambiar texto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iwImagen"
        app:layout_constraintVertical_bias="0.1" />


</androidx.constraintlayout.widget.ConstraintLayout>